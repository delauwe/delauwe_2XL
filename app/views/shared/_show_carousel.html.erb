<div id="myCarousel" class="carousel slide full-height" data-ride="carousel" data-interval="false">
  <ol class="carousel-indicators carousel-indicators-better">
    <li data-target="#myCarousel" data-slide-to='0' class="active"></li>
    <% for i in 1..apartment.photos.length %>
      <% if apartment.photos[i] %>
        <li data-target="#myCarousel" data-slide-to='<%= i %>'></li>
      <% end %>
    <% end %>
  </ol>

  <!-- Wrapper for carousel items -->

  <div class="carousel-inner full-height" role="listbox">
    <div class="item active banner" style="background-image: url('<%= cl_image_path apartment.photos_by_type[0].url %>');">
    </div>

    <% for i in 1..apartment.photos.length %>
      <% if  apartment.photos[i]%>
        <div class="item banner" style="background-image: url('<%= cl_image_path apartment.photos_by_type[i].url %>');">
        </div>
      <% end %>
    <% end %>
   </div>

  <!-- Controls -->
   <a class="carousel-control left" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
