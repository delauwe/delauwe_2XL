<div class="col-xs-12 col-md-4 col-lg-4">
  <%= link_to apartment_path(apartment) do %>
    <div class="card <%= apartment.category == "flatshare"  ? 'dark-gray' : 'kaki' %>">
      <div class="card-images">
        <div id="carousel-images-<%= apartment.id %>" class="carousel slide full-height" data-ride="carousel" data-interval="false">
          <!-- Indicators -->
          <ol class="carousel-indicators carousel-indicators-better">
            <% apartment.photos.each_with_index do |_photo, index| %>
            <li data-target="#carousel-images-<%= apartment.id %>" data-slide-to= "<%= index %>" class="<%= 'active' if index == 0 %>" ></li>
            <% end %>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner full-height" role="listbox">
            <% apartment.photos.order(id: :asc).each_with_index do |photo, index| %>
                <div class="item <%= "active" if index == 0 %> card-image" style="background-image: url('<%= cl_image_path photo.url %>');"></div>
            <% end %>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-images-<%= apartment.id %>" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-images-<%= apartment.id %>" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="tag-kaki card-category-tag"><%= apartment.nature %></div>
          <div class="tag-pink card-price-tag"><%= apartment.price %> <span>â‚¬ </span></div>
      </div>
      <div class="card-content">
        <div class="information">
          <div class="information-left">
            <h5 class="bold"> <%= apartment.name %></h5>
          </div>
          <div class="information-right">
            <div><% apartment.number_of_rooms.times do %><%= image_tag "chambre.png", height: 20 %><% end %></div>
          </div>
        </div>
          <p class="smaller-font-size"> <%= image_tag "pin.png", height: 15 %> <%= apartment.location %></p>
          <p class="smaller-font-size"><%= apartment.price %> <%= t('card.per_room') %> </p>
        <div class="availability">
          <h5 class="bold"><%= t('card.availability') %></h5>
          <div class="availability-details">
            <div class="circle-full"></div>
            <p class="smaller-font-size"><%= apartment.availability.strftime("%d/%m/%Y"); %></p>
          </div>

            <%#= link_to "Aller plus loin", apartment_path(apartment), class: "btn-border-pink btn-color-black btn-small" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
