<div class="col-xs-12 col-md-4 col-lg-4">
        <%= link_to apartment_path(apartment) do %>
          <div class="card">
            <div class="card-images">
              <div id="carousel-images-<%= apartment.id %>" class="carousel slide full-height" data-ride="carousel" data-interval="false">
                <!-- Indicators -->
                <ol class="carousel-indicators carousel-indicators-better">
                  <% apartment.photos.each_with_index do |_photo, index| %>
                  <li data-target="#carousel-images-<%= apartment.id %>" data-slide-to= "<%= index %>" class="<%= 'active' if index == 0 %>" ></li>
                  <% end %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner full-height" role="listbox">
                  <% apartment.photos.each_with_index do |photo, index| %>
                      <div class="item <%= "active" if index == 0 %> card-image" style="background-image: url('<%= cl_image_path photo.url %>');"></div>
                  <% end %>
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-images-<%= apartment.id %>" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-images-<%= apartment.id %>" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
              <% if apartment.category == "coloc" %>
                <div class="tag-pink card-price-tag"><%= apartment.price_per_room %> <span>€ </span></div>
              <% else %>
                <div class="tag-pink card-price-tag"><%= apartment.price %> <span>€ </span></div>
              <% end %>
            </div>
            <div class="card-content">
              <%#= apartment.category.capitalize %>
              <div class="card-first-line">
                <p class="kaki bold no-margin-bottom"> <%= apartment.name %></p>
                <div><% apartment.number_of_rooms.times do %><%= image_tag "chambre.png", height: 20 %><% end %></div>
              </div>
              <p class="no-margin-bottom smaller-font-size"> <%= image_tag "pin.png", height: 15 %> <%= apartment.location %></p>
              <% if apartment.category == "coloc" %>
                <p class="no-margin-bottom smaller-font-size"><%= apartment.price_per_room %> € par chambre </p>
              <% else %>
                <p class="no-margin-bottom smaller-font-size"><%= apartment.price %> €</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
