<div class="container">
  <div class="title">
    <h3>Nos colocs</h3>
  </div>
  <div class="row margin-top">
    <% @apartments.each do |apartment| %>
      <% if apartment.category == "flatsharing" || "coloc" %>
        <%= render "shared/card", apartment: apartment %>
      <%end%>
    <% end %>
  </div>
  <div class="title">
    <h3>Nos apparts</h3>
  </div>
  <div class="row margin-top">
    <% @apartments.each do |apartment| %>
      <% if apartment.category == "apartment" || "appart" %>
        <%= render "shared/card", apartment: apartment %>
      <% end %>
    <% end %>
  </div>
</div>





