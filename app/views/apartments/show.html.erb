<div class="wrapper">
  <div id="carousel-images-<%= @apartment.id %>" class="carousel slide full-height" data-ride="carousel" data-interval="false">
    <ol class="carousel-indicators carousel-indicators-better">
      <% @apartment.photos.each_with_index do |_photo, index| %>
      <li data-target="#carousel-images-<%= @apartment.id %>" data-slide-to= "<%= index %>" class="<%= 'active' if index == 0 %>" ></li>
      <% end %>
    </ol>
      <div class="carousel-inner full-height" role="listbox">
        <% @apartment.photos.each_with_index do |photo, index| %>
            <div class="item <%= "active" if index == 0 %> banner" style="background-image: url('<%= cl_image_path photo.url %>');"></div>
        <% end %>
      </div>
      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-images-<%= @apartment.id %>" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-images-<%= @apartment.id %>" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
</div>
<div class="container">
  <div class="flexbox-show">
    <div class="left-part">
      <div class="details">
        <h4><%= @apartment.name %></h4></p>
        <p class="tag tag-kaki smaller-font-size"><%= @apartment.nature.capitalize %></p>
          <% if @apartment.availability <= Date.today %>
            <p class="tag tag-green smaller-font-size">
            <%= t('card.available') %>
          </p>
          <% else %>
          <p class="tag tag-red smaller-font-size">
              <%= t('card.not-available') %> <%= @apartment.availability.strftime("%d/%m/%Y") %>
             </p>
          <% end %>
        <p class="smaller-font-size"><%= image_tag "pin.png", height: 15 %><%= @apartment.location %></p>
      </div>
      <div class="carasteristics smaller-font-size">
        <ul>
          <li><%= image_tag "size.png", height: 15 %> <%= @apartment.size %> <%= t('show.sqm') %></li>
          <li><%= image_tag "chambre.png", height: 20 %>
           <% if  @apartment.number_of_rooms <= 1 %>
              <%= @apartment.number_of_rooms  %> <%= t('show.rooms.one') %>
            <% else %>
              <%= @apartment.number_of_rooms  %> <%= t('show.rooms.other') %>
            <% end %>
          <li>
            <% number_of_bathroom = @apartment.bathroom %>
            <%= image_tag "bathroom.png", height: 15 %>
            <% if number_of_bathroom <= 1 %>
              <%= number_of_bathroom  %> <%= t('show.bathroom.one') %>
            <% else %>
              <%= number_of_bathroom %> <%= t('show.bathroom.other') %>
            <% end %>
          </li>
          <li><%= image_tag "toilet.png", height: 15 %>
           <% if @apartment.toilet <= 1 %>
              <%= @apartment.toilet  %> <%= t('show.toilet.one') %>
            <% else %>
              <%= @apartment.toilet %> <%= t('show.toilet.other') %>
            <% end %>
          </li>
          <li>
            <% if @apartment.terrace? %>
              <%= image_tag "sun.png", height: 15 %> <%= t('show.terrace') %>
            <% end %>
          </li>
          <li>
            <% if @apartment.living_room? %>
                <%= image_tag "sofa.png", height: 15 %> <%= t('show.living-room') %>
            <% end %>
          </li>
          <li>
            <% if @apartment.dining_room? %>
              <%= image_tag "table.png", height: 15 %> <%= t('show.dining-room') %>
            <% end %>
          </li>
          <li><%= image_tag "kitchen.png", height: 15 %> <%= t('show.kitchen') %></li>
          <li>
            <% if @apartment.washing_room? %>
              <%= image_tag "laverie.png", height: 15 %> <%= t('show.washing-room') %>
            <% else %>
              <%= image_tag "laverie.png", height: 15 %> <%= t('show.washing-macine') %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="description smaller-font-size">
        <p><%= @apartment.description  %></p>
      </div>
      <%= link_to root_path do %>
        <i class="fa fa-arrow-left"></i>
      <% end %>
    </div>
    <div class="right-part">
      <p class="pink-background smaller-font-size center"> <span class="price"><%= @apartment.price %> â‚¬ </span> + <%= t('show.utilities') %></p>
      <div class="buttons">
        <%= link_to t('show.reservation'), "https://docs.google.com/forms/d/e/1FAIpQLScFlItNbbbMVsVucvpQUKOoHCj-SLS0IYoMklJMoZiUGIT17A/viewform", class: "btn-border-pink text-black margin-right" %>
        <%= link_to t('show.contact'), "http://m.me/2XLcoloc.chambresalouer", class: "btn-border-gray text-black" %>
      </div>
    </div>
  </div>
</div>
