<div class="wrapper">
  <div id="carousel-images-<%= @apartment.id %>" class="carousel slide full-height" data-ride="carousel" data-interval="false">
    <ol class="carousel-indicators carousel-indicators-better">
      <% @apartment.photos.each_with_index do |_photo, index| %>
      <li data-target="#carousel-images-<%= @apartment.id %>" data-slide-to= "<%= index %>" class="<%= 'active' if index == 0 %>" ></li>
      <% end %>
    </ol>
      <div class="carousel-inner full-height" role="listbox">
        <% @apartment.photos.each_with_index do |photo, index| %>
            <div class="item <%= "active" if index == 0 %> banner" style="background-image: url('<%= cl_image_path photo.url %>');"></div>
        <% end %>
      </div>
      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-images-<%= @apartment.id %>" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-images-<%= @apartment.id %>" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
</div>
<div class="container">
  <div class="flexbox-show hidden-xs hidden-sm">
    <div class="left-part">
      <div class="details">
        <h4><%= @apartment.name %></h4></p>
        <p class="tag-kaki smaller-font-size"><%= @apartment.category.capitalize %></p>
        <p class="smaller-font-size"><%= image_tag "pin.png", height: 15 %><%= @apartment.location %></p>
      </div>
      <div class="carasteristics smaller-font-size">
        <p class="no-margin-bottom">
          <span class="span-commodities"><%= image_tag "size.png", height: 15 %> <%= @apartment.size %>m2</span>
          <span class="span-commodities"><%= image_tag "chambre.png", height: 20 %> <%= @apartment.number_of_rooms%> chambres</span>
          <% number_of_bathroom = @apartment.bathroom %>
          <span class="span-commodities"><%= image_tag "bathroom.png", height: 15 %> <%= number_of_bathroom <= 1 ? "#{number_of_bathroom} salle de bains" : "#{number_of_bathroom} salles de bains" %> </span>
          <span class="span-commodities"><%= image_tag "toilet.png", height: 15 %> <%= @apartment.toilet %> w.c</span>
        </p>
        <p>
          <% if @apartment.terrace? %>
            <span class="span-commodities">
              <%= image_tag "sun.png", height: 15 %> terrasse
            </span>
          <% end %>
          <% if @apartment.living_room? %>
            <span class="span-commodities small-margin-bottom">
              <%= image_tag "sofa.png", height: 15 %> séjour
            </span>
          <% end %>
          <% if @apartment.dining_room? %>
            <span class="span-commodities">
              <%= image_tag "table.png", height: 15 %> salle à manger
            </span>
          <% end %>
          <span class="span-commodities"> <%= image_tag "kitchen.png", height: 15 %> cuisine</span>
          <% if @apartment.washing_room? %>
            <span class="span-commodities small-margin-bottom">
              <%= image_tag "laverie.png", height: 15 %> laverie
            </span>
          <% else %>
            <span class="span-commodities small-margin-bottom">
              <%= image_tag "laverie.png", height: 15 %> machine à laver
            </span>
          <% end %>
        </p>
      </div>
      <div class="description smaller-font-size">
        <p><%= @apartment.description  %></p>
      </div>
    </div>
    <div class="right-part">
      <p class="pink-background smaller-font-size center"> <span class="price"><%= @apartment.price_per_room %> € </span> + charges</p>
