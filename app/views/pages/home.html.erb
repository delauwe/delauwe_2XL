<div class="banner-cover" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.4) 50%), url(https://res.cloudinary.com/elsaszymczak/image/upload/v1531924963/Alice%20D./terrasse.jpg);">
  <div class="banner-content">
    <h1>Votre logement idéal jeunes actifs</h1>
    <h2>Appart et Coloc 2XL</h2>
    <%= link_to "Découvrir", apartments_path, class: "btn-border-pink btn-large btn-color-white" %>
  </div>
</div>
<div class="container">
  <div class="home-content">
    <h2>Nos logements</h2>
    <div class="home-tag">
      <p class="tag-kaki smaller-font-size">Coloc</p>
      <p class="tag-gray smaller-font-size">Lille</p>
    </div>
    <div class="row margin-top">
      <% @apartments.first(3).each do |apartment| %>
        <% if apartment.category == "coloc" %>
          <%= render "shared/card", apartment: apartment %>
        <% end %>
      <% end %>
      <div class="home-button">
        <%= link_to "Découvrir toutes les colocs", apartments_path, class: "btn-border-pink btn-large btn-color-black" %>
      </div>
    </div>
    <div class="home-tag">
      <p class="tag-kaki smaller-font-size">Appartement</p>
      <p class="tag-gray smaller-font-size">Lille</p>
    </div>
    <div class="row margin-top">
      <% @apartments.each do |apartment| %>
        <% if apartment.category == "Appart" %>
          <%= render "shared/card", apartment: apartment %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
